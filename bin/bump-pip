    scipy                                                       \
    sh                                                          \
    sphinx                                                      \
    swifter                                                     \
    sympy                                                       \
    tdqm                                                        \
    twine                                                       \
    $(editable ~/hacking/projects/autoprop)                     \
    $(editable ~/hacking/projects/avendesora)                   \
    $(editable ~/hacking/projects/color_me)                     \
    $(editable ~/hacking/projects/emborg)                       \
    $(editable ~/hacking/projects/fossilize)                    \
