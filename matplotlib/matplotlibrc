errorbar.capsize : 2

# Need to specify a GUI backend.  By default the Agg backend is used, and it 
# doesn't support interactive plotting.
#backend : GTK3Agg

# Don't put a background behind the whole figure.  (There will still be a white 
# background for each axes.)
figure.facecolor : none
savefig.facecolor : none

# Use a font with good unicode support, because I often like to put unicode 
# symbols in my axis labels.
#font.family : sans-serif
#font.sans-serif : Liberation Sans, DejaVu Sans
font.family         : sans-serif
font.sans-serif     : DejaVu Sans

# https://matplotlib.org/users/dflt_style_changes.html#grid-lines
grid.color       :   k
grid.linestyle   :   :
grid.linewidth   :   0.5

# https://matplotlib.org/users/dflt_style_changes.html#plot
lines.linewidth : 1.0
lines.markersize : 4.4721
lines.solid_capstyle: butt

# https://matplotlib.org/users/dflt_style_changes.html#auto-limits
axes.autolimit_mode: round_numbers
axes.xmargin: 0
axes.ymargin: 0

# https://matplotlib.org/users/dflt_style_changes.html#legends
legend.fancybox      : False
legend.numpoints     : 1
legend.framealpha    : None
legend.scatterpoints : 3
legend.edgecolor     : inherit
patch.linewidth      : 0.75  # to match axes line width

# Use 10pt text for everything
font.size       : 10
axes.titlesize  : 10
axes.labelsize  : 10
xtick.labelsize : 10
ytick.labelsize : 10
